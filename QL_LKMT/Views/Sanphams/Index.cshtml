                @Html.DisplayFor(modelItem => item.Ngaycapnhat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdThanhtoan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdLoaiNavigation.IdLoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdThuonghieuNavigation.IdThuonghieu)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdSanpham">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdSanpham">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdSanpham">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
